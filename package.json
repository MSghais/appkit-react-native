{
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/ui",
    "packages/scaffold",
    "packages/wagmi",
    "apps/*"
  ],
  "scripts": {
    "gallery": "turbo run dev:gallery",
    "android": "cd apps/native && yarn android",
    "ios": "cd apps/native && yarn ios",
    "build": "turbo build",
    "build:gallery": "turbo run build:gallery",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --check .",
    "test": "turbo run test --parallel",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "pre-publish": "turbo clean lint prettier --parallel; yarn install; turbo run build;",
    "publish:latest": "yarn pre-publish && changeset version && changeset publish",
    "publish:alpha": "yarn pre-publish; yarn changeset pre enter alpha; yarn changeset version; changeset publish; changeset pre exit"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native/eslint-config": "0.72.2",
    "@testing-library/jest-native": "5.4.2",
    "@testing-library/react-native": "12.2.0",
    "@types/jest": "29.5.7",
    "@types/qrcode": "1.5.1",
    "@types/react": "18.2.34",
    "@types/react-native": "0.72.2",
    "eslint": "^8.46.0",
    "eslint-plugin-ft-flow": "2.0.3",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "prettier": "3.0.1",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-builder-bob": "0.23.1",
    "react-native-modal": "13.0.1",
    "react-native-svg": "13.9.0",
    "react-test-renderer": "18.2.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig": "*",
    "turbo": "1.10.15",
    "typescript": "5.2.2",
    "viem": "1.16.3",
    "wagmi": "1.4.3"
  },
  "packageManager": "yarn@1.22.19"
}
